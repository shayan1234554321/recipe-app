<h1>Recipes</h1>
<% if user_signed_in? %>
  <p><%= link_to 'Add new recipe', new_recipe_path %><p>
<% end %>
<% @recipes.each do |recipe| %>
  <div>
    <h2><%= recipe.name %></h2>
    <p><%= recipe.description %></p>
    <p><%= link_to 'Details', recipe_path(recipe) %></p>
    <% if recipe.user == current_user %>
      <%= button_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure you want to delete this recipe?' } %>
    <% end %>
    <hr>
  </div>
<% end %>

